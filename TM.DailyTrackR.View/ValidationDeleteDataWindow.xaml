<Window x:Class="TM.DailyTrackR.View.ValidationDeleteData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TM.DailyTrackR.View"
        mc:Ignorable="d"
        Title="ValidationDeleteData" Height="200" Width="300">
    <Grid Margin="20">
        <TextBlock Text="Are you sure you want to delete this activity?" Margin="0 0 0 20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Yes" Margin="0 0 10 0" Command="{Binding ConfirmDeleteCommand}"/>
            <Button Content="No" Command="{Binding CancelDeleteCommand}"/>
        </StackPanel>
    </Grid>
</Window>
